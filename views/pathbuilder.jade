html(ng-app='myApp')
    head
        // Latest compiled and minified CSS
        // bootstrap
        link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7", crossorigin="anonymous")
        link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css", integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r", crossorigin="anonymous")
        link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js", integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS", crossorigin="anonymous")

        //css
        link(rel='stylesheet', href='/stylesheets/pb.css')

        title Pathbuilder
    body
        .container-fluid(ng-controller='AppCtrl')
            h1 PathBuilder

            .row
                .col-md-8
                    script(src='//d3js.org/d3.v3.min.js')
                    script(src='js/tree.js')
                .col-md-4
                    .check-element.sample-show-hide(ng-show='checked', style='clear:both;')
                    form(name="add-node", method="post")
                        div.input
                            | Name
                            br
                            input(ng-model='node.name', type="text", name="name")
                            br
                            | Description
                            br
                            input(ng-model='node.des', type="text", name="des")
                            br
                            | Link
                            br
                            input(ng-model='node.link', type="text", name="link")
                            br
                            | Budget
                            br
                            input(ng-model='node.budget', type="text", name="budget")
                        div.action
                            button(class="button-top", ng-click='add()') Submit
                            button(class="button-top", ng-click='new()') Add Node
                            button(class="button-top", ng-click='edit(node._id)') edit
                            button(class="button-top", ng-click='delete(node._id)') Cancel

        // include angular
        script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.min.js')
        script(src='js/controllers/chart.js')
