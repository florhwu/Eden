/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
background-color = #E4F0EC
text = #06222f
theme = #34DDDD
c1 = #5EA2A5
c2 = #296379
c3 = #C2324B
c4 = #B1A9B8
c5 = #F0DFD5

body
    font-family 'Quicksand'
    background-color white
    color black

header
    font-family 'Quicksand'
    padding 50px 10px
    color white
    font-size 30px
    text-align center /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
    background-color black

.container
    width 600px
    margin 50px auto
    overflow hidden

.main-content
    float left
    width 300px

    p
        margin-bottom 20px


body
    background-color white


    p
        font-size 13px
        padding 0px 10px
        margin-bottom 10px

    a
        text-align center
        vertical-align text-top
        background-color white
        padding 10px 150px
        color black
        text-decoration none

    a:hover
        color theme
p
    line-height 1.8

footer
    width 500px
    margin 50px auto
    border-top 1px dotted #ccc
    padding-top 5px
    font-size 10px