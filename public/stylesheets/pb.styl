/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')
@import url('http://fonts.googleapis.com/css?family=Poiret+One')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
background-color = #E4F0EC
text = #06222f
theme = #34DDDD
c1 = #5EA2A5
c2 = #296379
c3 = #C2324B
c4 = #B1A9B8
c5 = #F0DFD5


.node circle
    fill #fff
    stroke steelblue
    stroke-width 3px

.node text
    font 12px Quicksand

.link
    fill none
    stroke #ccc
    stroke-width 2px

h1
    font-family Quicksand
    font-size 30px
    text-align center
    padding 30px 10px
    border-bottom 1px solid darkgrey

form
    padding 20px
    border 1px solid darkgrey
    margin 30px
    font-family Quicksand
    min-width 300px
    line-height 150%
    font-size 14px

.input
    padding 10px

.sample-show-hide {
    padding:10px;
    background:white;
}

.sample-show-hide {
    -webkit-transition:all linear 0.5s;
    transition:all linear 0.5s;
}

.sample-show-hide.ng-hide {
    opacity:0;
}


